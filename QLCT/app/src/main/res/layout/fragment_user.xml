<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_cash"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/layout_border"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:padding="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Tài khoản:"
            android:textColor="#000"/>
        <EditText
            android:id="@+id/edtUser"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:text="admin"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#E12B2929"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Mật khẩu:"
            android:textColor="#000"/>
        <EditText
            android:id="@+id/edtPass"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:text="admin"
            android:textSize="18sp"
            android:textStyle="bold"
            android:inputType="textPassword"
            android:textColor="#E12B2929"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Tuổi:"
            android:textColor="#000"/>
        <EditText
            android:id="@+id/edtAge"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:text="18"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#E12B2929"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Giới tính:"
            android:textColor="#000"/>
        <EditText
            android:id="@+id/edtGender"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:text="Nữ"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#E12B2929"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp">
            <Button
                android:id="@+id/btnUpdate"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:text="Cập nhật"
                tools:ignore="MissingConstraints"
                app:layout_constraintRight_toLeftOf="@id/btnLogout"
                app:layout_constraintLeft_toLeftOf="parent"
                android:background="@drawable/user_update_custom_button"/>
            <Button
                android:id="@+id/btnLogout"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:text="Đăng xuất"
                tools:ignore="MissingConstraints"
                app:layout_constraintLeft_toRightOf="@id/btnUpdate"
                app:layout_constraintRight_toRightOf="parent"
                android:background="@drawable/user_logout_custom_button"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

</LinearLayout>