<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Khoản chi"
        android:textSize="30dp"
        android:gravity="center"
        android:textColor="#4CAF50"
        android:textStyle="bold"
        android:layout_marginTop="50dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_margin="20dp">
        <TextView
            android:id="@+id/tvTitler"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Tiêu đề: "
            android:textStyle="bold"
            android:textColor="#2196F3"
            android:textSize="18dp"
            android:gravity="center"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_weight="1"
            android:layout_width="120dp"
            android:textColor="#FF5722"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Title"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            app:layout_constraintLeft_toRightOf="@+id/tvTitler"
            tools:ignore="MissingConstraints" />
        <ImageView
            android:id="@+id/btnTrash"
            android:layout_weight="200"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_trash"
            app:layout_constraintRight_toRightOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nội dung:"
            android:textSize="18dp"
            android:textStyle="normal"
            android:paddingBottom="5dp"
            tools:ignore="MissingConstraints" />
        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            tools:ignore="MissingConstraints"
            android:text="24/12/2019"
            android:textSize="16dp"
            android:textColor="#03A9F4"
            android:textStyle="italic"
            app:layout_constraintRight_toRightOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <EditText
        android:id="@+id/edtContent"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:padding="10dp"
        android:textSize="15dp"
        android:inputType="textMultiLine"
        android:scrollHorizontally="false"
        android:scrollbars="vertical"
        android:overScrollMode="always"
        android:scrollbarStyle="insideInset"
        android:minLines="4"
        android:maxLines="12"
        android:lines="4"
        android:gravity="top|left"
        android:background="@drawable/custom_edittext"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColorHint="#55000000"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="20dp">
        <TextView
            android:id="@+id/tvExpense"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số tiền phải chi: "
            android:padding="8dp"
            android:textSize="18dp"
            android:textColor="#E91E63"
            tools:ignore="MissingConstraints" />
        <EditText
            android:id="@+id/edtAmount"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:background="@drawable/custom_spiner_border"
            android:textColorHint="#55000000"
            tools:ignore="MissingConstraints"
            android:layout_marginLeft="10dp"
            app:layout_constraintLeft_toRightOf="@+id/tvExpense"
            app:layout_constraintRight_toLeftOf="@id/tvVND"/>
        <TextView
            android:id="@+id/tvVND"
            android:text="VNĐ"
            android:textSize="20dp"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"
            app:layout_constraintRight_toRightOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="20dp">
        <Button
            android:id="@+id/btnConfirm"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="Sửa"
            android:background="@drawable/user_update_custom_button"
            tools:ignore="MissingConstraints"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/btnCancel"/>
        <Button
            android:id="@+id/btnCancel"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="Hủy"
            android:background="@drawable/user_logout_custom_button"
            tools:ignore="MissingConstraints"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/btnConfirm"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>